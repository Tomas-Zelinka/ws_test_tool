<?xml version="1.0" encoding="UTF-8"?>
<project name="bookStore" default="default" basedir=".">
    <description>Builds, tests, and runs the webservices.</description>
    <property name="src.dir" value="src" />
   	<property name="build.dir" value="build" />
	<property name="lib.dir" value="lib" />
	<property name="data.dir" value="data" />
	<property name="resources.dir" value="resources" />
	<property name="webcontent.dir" value="EarContent"/>
	
	<property name="class.dir" value="${build.dir}/classes" />
	<property name="jar.dir" value="${build.dir}/jar" />
	<property name="war.dir" value="${build.dir}/war" />
	

	<property name="web-inf.dir" value="${webcontent.dir}/WEB-INF"/>
	<property name="meta-inf.dir" value="${webcontent.dir}/META-INF"/>
	
	<property name="class_resources.dir" value="${class.dir}/resources" />
	
	<property name="jar_lib.dir" value="${jar.dir}/lib" />
	<property name="jar_data.dir" value="${jar.dir}/data" />
	<property name="jar.file" value="${jar.dir}/${ant.project.name}.jar" />
	
	<property name="war_webcontent.dir" value="${war.dir}/${webcontent.dir}/"/>
	<property name="war_resources.dir" value="${web-inf.dir}/resources" />
	<property name="war_lib.dir" value="${web-inf.dir}/lib" />
	<property name="war_data.dir" value="${web-inf.dir}/data"/>
	<property name="war.file" value="${war.dir}/${ant.project.name}.war" />
	<property name="wsdl.dir" value="${web-inf.dir}/wsdl"/>

	
	
	
	<property name="dep_cp" value="${toString:dep.runtime}" />

	<path id="dep.runtime">
	    <fileset dir="./lib">
	        <include name="**/*.jar" />
	    </fileset>
	</path>
		
	<target name="clean">
		<delete dir="build" />
		<delete dir="${webcontent.dir}" />
	</target>
	
		
	
	<target name="init" depends="clean">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${class.dir}" />
		<mkdir dir="${jar.dir}" />
		<mkdir dir="${war.dir}"/>
		<mkdir dir="${web-inf.dir}" />
		<mkdir dir="${meta-inf.dir}" />
		
		<mkdir dir="${war_lib.dir}" />
		<!--<mkdir dir="${war_data.dir}" />
		
		 <mkdir dir="${wsdl.dir}" /> !-->
		
		<mkdir dir="${jar_data.dir}" />
		<mkdir dir="${jar_resources.dir}" />
		<mkdir dir="${jar_lib.dir}" />
		
		<copy todir="${jar_lib.dir}">
			<fileset dir="${lib.dir}"/>
		</copy>
		
		<copy todir="${class_resources.dir}">
			<fileset dir="${resources.dir}"/>
		</copy>
		
		<copy todir="${jar_data.dir}">
			<fileset dir="${data.dir}"/>
		</copy>
		
		<copy todir="${war_data.dir}">
			<fileset dir="${data.dir}"/>
		</copy>
		
		
				
    </target>
	
	<target name="compile" depends="clean,init" description="compile the source"  >
	    <echo>Compile from ${src.dir} to ${build.dir}</echo>
	
	    <javac destdir="${class.dir}" srcdir="${src.dir}" includeantruntime="false">
	    	<classpath refid="dep.runtime"/>
	    </javac>
    </target>
	
	<target name="jar" depends="compile">
		<manifestclasspath property="manifest_cp" jarfile="${jar.file}">
	        <classpath refid="dep.runtime" />
	    </manifestclasspath>
		<jar destfile="${jar.file}" basedir="${class.dir}">
			<manifest>
		    	<attribute name="Main-Class" value="bookStore.Main"/>
				<attribute name="Class-Path" value="${manifest_cp}" />
			</manifest>
		</jar>
	</target>
	
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: war                      
         - - - - - - - - - - - - - - - - - -->
	<target name="war" depends="compile">
		<manifestclasspath property="manifest_cp" jarfile="${war.file}">
        	<classpath refid="dep.runtime" />
	    </manifestclasspath>
		<war destfile="${war.file}" webxml="web.xml">
			<fileset dir="${webcontent.dir}"/>
			<lib dir="${web-inf.dir}/lib"/>
			<classes dir="${class.dir}"/>
			<manifest>
		    	<attribute name="Class-Path" value="${manifest_cp}" />
			</manifest>
		</war>
	</target>

	
	<!-- <target name="run" depends="jar">
		<echo> Running ${jar.file} </echo>
		<java jar="${jar.file}" fork="true" />
	</target> !-->
	
	<!-- - - - - - - - - - - - - - - - - - 
          target:deployy                      
         - - - - - - - - - - - - - - - - - -->
    <target name="deploy">
            
    </target>


	<target name="default" depends="war" />
	   
	 
	
</project>